<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#000000"
    tools:context="com.example.reddragon.guessthenum.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Guest Your Number !"
        android:textColor="#ffe000"
        android:textSize="35dp"
        android:textAlignment="center"
        android:id="@+id/TV_Intro"
        android:paddingTop="30dp"
        android:layout_marginBottom="25dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Think of a Number between 0 and 10,000"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_marginBottom="25dp"
        android:layout_below="@+id/TV_Intro"
        android:id="@+id/TV_Display"/>

    <TextView
        android:text="Is Your Number:"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_below="@+id/TV_Display"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Correct !"
        android:textColor="#000000"
        android:background="#7CFC00"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/BT_Correct"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/TV_Guess"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Lower"
        android:textColor="#ffffff"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="#aaef0000"
        android:id="@+id/BT_Lower"
        android:layout_marginLeft="41dp"
        android:layout_marginStart="41dp"
        android:layout_below="@+id/BT_Correct"
        android:layout_alignLeft="@+id/TV_Guess"
        android:layout_alignStart="@+id/TV_Guess" />

    <Button
        android:text="Higher"
        android:textColor="#000000"
        android:background="#ffff00"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/BT_Higher"
        android:layout_below="@+id/BT_Correct"
        android:layout_toRightOf="@+id/BT_Correct"
        android:layout_toEndOf="@+id/BT_Correct" />

    <Button
        android:text="RESET"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/BT_Reset"
        android:layout_below="@+id/BT_Lower"
        android:layout_toRightOf="@+id/BT_Lower"
        android:layout_toEndOf="@+id/BT_Lower" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#aef000"
        android:text="0"
        android:textSize="50dp"
        android:textAlignment="center"
        android:id="@+id/TV_Guess"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
